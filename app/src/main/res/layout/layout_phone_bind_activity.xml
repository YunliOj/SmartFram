<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bind_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/bind_icon"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:scaleType="centerInside"
            android:layout_height="80dp" />
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/bind_state_info"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="80dp" />
        <Button
            android:background="@color/green"
            android:id="@+id/bind_btn_bind"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="170dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"

        android:id="@+id/binding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_height="32dp">
            <TextView
                android:textColor="@color/title_txt"
                android:textSize="10sp"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:background="@null"
                android:text="@string/phone_number"/>
            <EditText
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:id="@+id/bind_num"
                android:textColorHint="@color/hint_txt"
                android:background="@drawable/insert_tex_line"
                android:cursorVisible="false"
                android:textColor="@color/data_txt"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="@string/enter_phone_number_please"/>
        </LinearLayout>
        <include layout="@layout/layout_line_h"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="32dp">
            <TextView
                android:textColor="@color/title_txt"
                android:textSize="10sp"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:background="@null"
                android:text="@string/verify_number"/>
            <EditText
                android:paddingStart="10dp"
                android:id="@+id/bind_verify_number"
                android:cursorVisible="false"
                android:textColorHint="@color/hint_txt"
                android:textColor="@color/data_txt"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/insert_tex_line"
                android:hint="@string/enter_verify_number_please"/>
            <Button
                android:id="@+id/get_verify_number"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:textColor="@color/text_white"
                android:text="@string/get_verify_number"
                android:background="@color/green"/>
        </LinearLayout>
        <include layout="@layout/layout_line_h"/>
    </LinearLayout>
</LinearLayout>
