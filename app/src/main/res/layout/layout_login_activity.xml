<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:id="@+id/bg_login"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/u52"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@mipmap/login"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:singleLine="true"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:id="@+id/tv_login_account"
            android:cursorVisible="false"
            android:background="@null"
            android:hint="请输入登录账号/手机号"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@mipmap/password"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:cursorVisible="false"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:id="@+id/tv_login_password"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/show_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"></LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/text_white"
        android:background="@mipmap/across"
        android:text="登录"/>


    <TextView
        android:id="@+id/tv_login_forget"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="80dp"
        android:text="忘记密码"
        android:textColor="@color/text_white"
        android:layout_height="40dp" />

</LinearLayout>
