<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="80dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_line">

    <RelativeLayout
        android:id="@+id/work_item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_work_item_type"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="施肥"
            android:textSize="12sp"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:background="@mipmap/round_blue"/>

        <TextView
            android:id="@+id/tv_work_item_content"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_work_item_type"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:text="超级芒果又大又甜"/>

        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_work_item_place"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_work_item_type"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="芒果基地"/>

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_work_item_date"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="2017/4/02"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/u312"/>
    </RelativeLayout>
</LinearLayout>
